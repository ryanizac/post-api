{
  "name": "post-api",
  "description": "A node api to manage posts",
  "version": "1.0.0",
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "jest --bail --findRelatedTests --passWithNoTests"
    ]
  },
  "scripts": {
    "test": "jest",
